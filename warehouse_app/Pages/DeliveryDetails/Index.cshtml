@model warehouse_app.Pages.DeliveryDetails.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDetails[0].NumberOfPallets)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDetails[0].BottlesPerPallet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDetails[0].Water)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DeliveryDetails[0].Delivery)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.DeliveryDetails) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfPallets)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BottlesPerPallet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Water.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Delivery.Id)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
